<?xml version="1.0" encoding="UTF-8"?>
<EscalationRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <escalationRule>
        <fullName>Escalation</fullName>
        <active>true</active>
        <ruleEntry>
            <businessHoursSource>None</businessHoursSource>
            <escalationAction>
                <minutesToEscalation>270</minutesToEscalation>
                <notifyCaseOwner>true</notifyCaseOwner>
                <notifyEmail>zelizach@gmail.com</notifyEmail>
                <notifyToTemplate>unfiled$public/CaseResponse</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseLastModified</escalationStartTime>
            <formula>TEXT( Status )  = &apos;New&apos;</formula>
        </ruleEntry>
    </escalationRule>
</EscalationRules>
